<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:text="Welcome [Name]"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.05"
        android:autoSizeTextType="uniform"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/water_fountain"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.5"
        app:shapeAppearance="@style/ImageRound" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/gradient_primary"
                android:textColor="?attr/colorOnPrimary"
                android:text="Here should be map"
                android:gravity="center"
                android:autoSizeTextType="uniform"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/gradient_primary"
                android:padding="5dp">

                <TextView
                    android:layout_marginVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Near you"
                    android:textSize="25sp"
                    android:textColor="?attr/colorOnPrimary"/>

                <include layout="@layout/contribution_short_layout"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
                <include layout="@layout/contribution_short_layout"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

                <Button
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="See all"
                    android:backgroundTint="?attr/colorPrimaryVariant"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:background="@drawable/gradient_primary">

                <TextView
                    android:layout_marginVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your contributions"
                    android:textSize="25sp"
                    android:textColor="?attr/colorOnPrimary"/>

                <include layout="@layout/contribution_short_layout"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
                <include layout="@layout/contribution_short_layout"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

                <Button
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="See all"
                    android:backgroundTint="?attr/colorPrimaryVariant"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>