<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/gradient_secondary">

    <ImageView
		android:id="@+id/placePicture"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:src="@drawable/water_fountain_warn"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:contentDescription="@string/fountain_image"/>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
			android:id="@+id/topText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_medium_large"
            android:text="@string/placeholder"
            android:textColor="?attr/colorOnPrimary"/>

        <TextView
			android:id="@+id/bottomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_medium_small"
            android:text="@string/placeholder"
            android:textColor="?attr/colorOnPrimary"/>

    </LinearLayout>

    <TextView
		android:id="@+id/contributionType"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/placeholder"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_weight="0.8"
        android:textColor="?attr/colorOnPrimary"
        android:autoSizeTextType="uniform"/>

    <ImageView
		android:id="@+id/contributionPicture"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:translationX="@dimen/image_x_offset"
        android:background="?attr/colorSurface"
        android:src="@drawable/water_fountain_valid"
        android:contentDescription="@string/fountain_status" />

</LinearLayout>