<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        map:cameraTargetLat="37"
        map:cameraTargetLng="122"
        map:cameraZoom="10.0"
        map:uiZoomGestures="true"
        map:uiScrollGestures="true"
        map:uiRotateGestures="true"
        map:uiTiltGestures ="true"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/idSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="?attr/colorSurface"
        android:elevation="5dp"
        app:iconifiedByDefault="false"
        app:queryHint="Search Here"
        app:layout_constraintStart_toStartOf="@id/map"
        app:layout_constraintTop_toTopOf="@id/map"/>


    <ImageButton
        android:id="@+id/currentLoc"
        android:layout_width="40dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/map"
        app:layout_constraintBottom_toBottomOf="@id/map"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/water_fountain"
		android:backgroundTint="?attr/colorPrimary"
        android:scaleType="fitCenter"
	/>

    <ImageButton
        android:id="@+id/printLoc"
        android:layout_width="40dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/currentLoc"
        app:layout_constraintBottom_toTopOf="@id/currentLoc"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/water_fountain_break"
        android:backgroundTint="?attr/colorPrimary"
        android:scaleType="fitCenter"
	/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/pin"
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:layout_constraintEnd_toEndOf="@id/map"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/map"
		android:src="@drawable/water_fountain_valid"
        android:contentDescription="@string/placeholder" 
	/>

</androidx.constraintlayout.widget.ConstraintLayout>